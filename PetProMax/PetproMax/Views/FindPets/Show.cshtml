@model IEnumerable<PetproMax.Models.FindPet>

@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}

<h2>尋找寵物首頁</h2>

<p>
    @Html.ActionLink("新增走失寵物", "Create", null, new { @class = "btn btn-info btn-xl" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Member.MemberName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PetSex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PetType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PetBreed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PetTsmc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LostDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PetPhotoFile)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.PetDescription)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Member.MemberName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PetName)
    </td>
    <td>
        @(item.PetSex ? "男生" : "女生")
    </td>
    <td>
        @(item.PetType ? "狗" : "貓")
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PetBreed)
    </td>
    <td>
        @(item.PetTsmc ? "是" : "否")
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LostDate)
    </td>
    <td>
        @*@Html.DisplayFor(modelItem => item.PetPhotoFile)*@
        <img src="~/PetPhotos/@(item.PetName).jpg" width="150" />
    </td>
    @*<td>
        @Html.DisplayFor(modelItem => item.PetDescription)
    </td>*@
    <td>
        @*@Html.ActionLink("Edit", "Edit", new { id = item.FindPetID }) |*@
        @Html.ActionLink("查看詳情", "Details", new { id = item.FindPetID }, new { @class = "btn btn-secondary btn-sm" })
        @*@Html.ActionLink("Delete", "Delete", new { id = item.FindPetID })*@
    </td>
</tr>
    }

</table>
