@model PetproMax.Models.FindPet
@using PetproMax.Models;

@{
    //ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_User.cshtml";
    int memberID = ((Members)Session["user"]).MemberID;
}

<div class="p-3">

    <div class="card border-info">
        <div class="card-header bg-light text-black">
            <h3>@Html.DisplayFor(model => model.PetName)</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h4>品種：@Html.DisplayFor(model => model.PetBreed)</h4>
                    <h4>詳情：@Html.DisplayFor(model => model.PetDescription)</h4>
                </div>
                <div class="col-md-4">
                    @{
                        var photo = Model.PetPhotoFile == null ? "defaultPhoto.png" : Model.PetPhotoFile;
                    }
                    <img src="~/PetPhotos/@photo" class="img-thumbnail" />
                </div>
            </div>
        </div>
    </div>


</div>

<p>
    @if (memberID == Model.MemberID)
    { 
        @Html.ActionLink("修改", "Edit", new { id = Model.FindPetID }, new { @class = "btn btn-danger" })
    }
    @Html.ActionLink("返回認養申請首頁", "Show", null, new { @class = "btn btn-dark" })
</p>
