<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 帥帥招財</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @*<script src="~/Scripts/modernizr-2.8.3.js"></script>*@
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <style>
        .bg {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            z-index: -999;
            opacity: 0.3;
        }

            .bg img {
                min-height: 100%;
                width: 100%;
            }
    </style>
</head>
<body>
    <div class="bg">
        <img src="~/kid1.jpg" />
    </div>
    <div class="navbar navbar-expand-lg navbar-dark bg-danger mb-3">
        <div class="container">
            @Html.ActionLink("帥帥招財後台管理", "Index", "HomeManager", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#MynavbarMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="MynavbarMenu">
                <div class="navbar-nav h5">
                    @Html.ActionLink("後台首頁", "Index", "HomeManager", new { area = "" }, new { @class = "nav-link" })
                    @Html.ActionLink("Admin管理", "Index", "Employees", new { area = "" }, new { @class = "nav-link" })
                    @Html.ActionLink("會員管理", "Index", "Members", new { area = "" }, new { @class = "nav-link" })
                    @Html.ActionLink("寵物中途", "Index", "HomeLessAnimals", new { area = "" }, new { @class = "nav-link" })
                    @Html.ActionLink("尋找寵物", "Index", "FindPets", new { area = "" }, new { @class = "nav-link" })
                    @Html.ActionLink("領養申請管理", "Index", "Applieds", new { area = "" }, new { @class = "nav-link" })
                    @Html.ActionLink("商品管理", "Index", "Products", new { area = "" }, new { @class = "nav-link" })
                    @Html.ActionLink("訂單管理", "Index", "Orders", new { area = "" }, new { @class = "nav-link" })
                    @Html.ActionLink("登出", "Logout", "HomeManager", new { area = "" }, new { @class = "nav-link" })
                </div>
            </div>
        </div>
    </div>

    <section class="container">
        <div class="alert alert-danger text-center">您目前是管理員身分，使用後請記得登出！</div>
        @RenderBody()
    </section>
    <hr />
    <footer class="bg-dark mt-5">
        <p class="text-white text-center p-3">Copyright &copy; @DateTime.Now.Year - 帥帥招財 All Rights Reserved.</p>
    </footer>


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", false)

</body>
</html>

@{
    if (!string.IsNullOrEmpty((string)TempData["Message"] ?? string.Empty))
    {
        <script>
                   alert("@(TempData["Message"])")
        </script>
    }
}